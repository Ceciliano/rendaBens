<!DOCTYPE html>
<html lang="en" ng-app="appClientes">

  <% include ../partials/head %>

  <body>

  <section id="container" >
      <!-- **********************************************************************************************************************************************************
      TOP BAR CONTENT & NOTIFICATIONS
      *********************************************************************************************************************************************************** -->
      <!--header start-->
         <% include ../partials/header %>
      <!--header end-->

      <!-- **********************************************************************************************************************************************************
      MAIN SIDEBAR MENU
      *********************************************************************************************************************************************************** -->
      <!--sidebar start-->
         <% include ../partials/sidebar %>
      <!--sidebar end-->
      <!-- **********************************************************************************************************************************************************
      MAIN CONTENT
      *********************************************************************************************************************************************************** -->
      <!--main content start-->
      <script type="text/ng-template" id="/listaCliente">
          <section id="main-content">
              <section class="wrapper">
              	<h3><i class="fa fa-angle-right"></i> Clientes </h3>
    		  		<div class="row mt">
    			  		<div class="col-lg-12">
                          <div class="content-panel">
                          <h4><i class="fa fa-angle-right"></i> Lista de Clientes</h4>
                              <section id="unseen">
                                <table class="table table-bordered table-striped table-condensed">
                                  <thead>
                                  <tr>
                                      <th>Nome</th>
                                  </tr>
                                  </thead>
                                  <tbody>
                                  <tr ng-repeat="cliente in clientes">
                                      <td> {{cliente.nome}} </td>
                                  </tr>
                                  </tbody>
                              </table>
                              <a href="#/novo/57e4119f99a1d94c269a37d5" class="btn btn-default">Novo</a>
                         </section>
                      </div><!-- /content-panel -->
                   </div><!-- /col-lg-4 -->
    		  	</div><!-- /row -->
    		</section><!--/wrapper -->
          </section><!-- /MAIN CONTENT -->
    </script>

    <script type="text/ng-template" id="/formularioCliente">

        <section id="main-content">
            <section class="wrapper">
              <h3><i class="fa fa-angle-right"></i> Clientes </h3>
                  <div class="row mt">
                		<div class="col-lg-12">
                        <form class="form-horizontal style-form" method="post" enctype="multipart/form-data" ng-submit="submeter()">
                        <!-- Dados para acesso -->
                        <div class="form-panel">
                        	<h4 class="mb"><i class="fa fa-angle-right"></i> Dados para acesso </h4>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Email</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" ng-model="marca.nome">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Senha</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" ng-model="marca.descricao">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Tipo de Pessoa</label>
                                    <div class="col-sm-2">
                                        <select class="form-control" ng-model="cliente.tipoPessoa" ng-options="opcao.value as opcao.label for opcao in tipoPessoa">
                                            <option value="">Selecione...</option>
                                        </select>
                                    </div>
                                </div>
                        </div>
                        <!-- Dados pessoais -->
                        <div class="form-panel">
                        	<h4 class="mb"><i class="fa fa-angle-right"></i> Dados Pessoais </h4>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Nome</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" ng-model="cliente.nome">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">CPF</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" ng-model="cliente.cpf" mask="999.999.999-99">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Celular</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" ng-model="cliente.celular"  mask="(99) 9?9999-9999">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Telefone fixo</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" ng-model="cliente.telefone"  mask="(99) 9999-9999">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Sexo</label>
                                    <div class="col-sm-4">
                                        <select class="form-control" ng-model="cliente.tipoPessoa" ng-options="opcao.value as opcao.label for opcao in sexo">
                                            <option value="">Selecione...</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Data de Nascimento</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" ng-model="cliente.dataNascimento" mask="39/19/9999">
                                    </div>
                                </div>
                        </div>

                        <!-- Endereço -->
                        <div class="form-panel">
                        	<h4 class="mb"><i class="fa fa-angle-right"></i> Endereço </h4>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">CEP</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" ng-model="endereco.cep" mask="99999-999" ng-change="buscaEndereco()">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Endereço</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" ng-model="endereco.logradouro">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Número</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" ng-model="endereco.numero">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Complemento</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" ng-model="endereco.complemento">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Referência</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" ng-model="endereco.referencia">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Bairro</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" ng-model="endereco.bairro">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Cidade</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" ng-model="endereco.cidade">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Estado</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" ng-model="endereco.uf">
                                    </div>
                                </div>
                            <button type="submit" class="btn btn-default">Salvar</button>
                        </div>
                        </form>
                		</div><!-- col-lg-12-->
                	</div><!-- /row -->
          </section><!--/wrapper -->
        </section><!-- /MAIN CONTENT -->
  </script>
    <ng-view></ng-view>
      <!--main content end-->
      <!--footer start-->
         <% include ../partials/footer %>
      <!--footer end-->
  </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="../assets/js/jquery.js"></script>
    <script src="../assets/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="../assets/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="../assets/js/jquery.scrollTo.min.js"></script>
    <script src="../assets/js/jquery.nicescroll.js" type="text/javascript"></script>


    <!--common script for all pages-->
    <script src="../assets/js/common-scripts.js"></script>

    <!--script for this page-->
    <script src="/angular/cliente.js"></script>
  </body>
</html>
